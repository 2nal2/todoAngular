
<%= form_for(@product_category, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :name, class: 'row' do |f| %>
      <%= f.label "Nombre", class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :status, class: 'row' do |f| %>
      <%= f.label "Estado", class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.check_box :status, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="d-flex">
    <div class="ml-auto">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Cancelar", product_categories_path, class: 'btn btn-outline-default' %>
    </div>
  </div>
<% end %>

