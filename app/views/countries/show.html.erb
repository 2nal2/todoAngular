<% @title = "País" %>

<div class="container">
  <div class="row">
    <div class="col-12 col-md-12">
      <div class="card">
        <div class="card-body">
          <div class="form-horizontal">
            <div class="form-group row">
              <label class="col-12 col-md-2 form-label">Nombre</label>
              <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @country.name %>
                  </span>
              </div>
            </div>

            <div class="form-group row">
              <label class="col-12 col-md-2 form-label">Estado</label>
              <div class="col-12 col-md-10 form-control uneditable-input">
                  <span class="badge badge-<%= @country.status ? "success" : "danger" %>">
                  <%= @country.status ? "Activo" : "Inactivo" %>
                </span>
              </div>
            </div>

            <div class="d-flex">
              <div class="ml-auto">
                <%= link_to new_country_province_path(@country), class: 'btn btn-primary' do %>
                  <%= fa_icon_tag "plus" %> Agregar departamento/provincia
                <% end %>
                <%= link_to fa_icon_tag("pencil") + ' Editar', edit_country_path(@country), class: 'btn btn-primary' %>
                <%= link_to 'Atrás', countries_path, class: 'btn' %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!--      provincias-->
      <div class="row">
        <div class="col-md-12">
          <%= form_tag(country_path, :method => "get", id: "search-form", class: "horizontal-form") do %>
            <div class="form-inputs row">
              <div class="col-9 col-sm-10">
                <%= text_field_tag :search, params[:search], placeholder: "Buscar departamento/provincia", class: "form-control" %>
              </div>
              <div class="pull">
                <%= submit_tag "Buscar", class: "btn btn-primary btn-large" %>
              </div>
            </div>
          <% end %>
          <br>
          <div class="card">
            <table class="table table-striped table-hover table-sm-responsive">
              <thead>
              <tr>
                <th>Nombre</th>
                <th>Estado</th>
                <th></th>
              </tr>
              </thead>
              <tbody>
              <% @provinces.each do |province| %>
                <tr>
                  <td><%= province.name %></td>
                  <td>
                <span class="badge badge-<%= province.status ? "success" : "danger" %>">
                  <%= province.status ? "Activo" : "Inactivo" %>
                </span>
                  </td>
                  <td class="actions text-right">
                    <div class="btn-group">
                      <%#= link_to theme_icon_tag("eye"), country_province_path(province.country_id, province), 'data-toggle': 'tooltip', title: 'Ver', class: "btn btn-link" %>
                      <%= link_to theme_icon_tag("pencil-alt"), edit_country_province_path(@country, province), 'data-toggle': 'tooltip', title: 'Editar', class: "btn btn-link" %>
                      <%#= link_to theme_icon_tag("trash"), province, 'data-toggle': 'tooltip', title: 'Delete', data: {confirm: 'Are you sure?'}, method: :delete, class: 'btn btn-link' %>
                    </div>
                  </td>
                </tr>
              <% end %>
              <% if @provinces.length == 0 %>
                <tr>
                  <td colspan=42 class='text-center'>No hay departamentos/provincias registradas</td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>

          <%# Remove the trailing if condition if you're using pagination. %>
          <%= will_paginate @provinces if @provinces.respond_to?(:total_pages) %>

        </div>
      </div>
      <!--      final provincias-->
    </div>
  </div>
</div>
