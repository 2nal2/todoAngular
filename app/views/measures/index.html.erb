<% @title = "Lista de unidades de medida" %>

<% content_for :description do %>
  <p></p>
<% end %>

<% content_for :actions do %>
  <%= link_to new_measure_path, class: 'btn btn-primary btn-large pull-right' do %>
    <%= fa_icon_tag "plus" %> Agregar unidad de medida
  <% end %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-9">
      <div class="card card-sheet sheet-condensed">
        <table class="table table-striped table-hover table-sm-responsive">
          <thead>
          <tr>
            <th>Nombre</th>
            <th>CÃ³digo</th>
            <th>Estado</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @measures.each do |measure| %>
            <tr>
              <td><%= measure.name %></td>
              <td><%= measure.code %></td>
              <td>
                <span class="badge badge-<%= measure.status ? "success" : "danger" %>">
                  <%= measure.status ? "Activo" : "Inactivo" %>
                </span>
              </td>
              <td class="actions text-right">
                <div class="btn-group">
                  <%= link_to theme_icon_tag("eye"), measure, 'data-toggle': 'tooltip', title: 'Ver', class: "btn btn-link" %>
                  <%= link_to theme_icon_tag("pencil-alt"), edit_measure_path(measure), 'data-toggle': 'tooltip', title: 'Editar', class: "btn btn-link" %>
                  <%#= link_to theme_icon_tag("trash"), measure, 'data-toggle': 'tooltip', title: 'Delete', data: {confirm: 'Are you sure?'}, method: :delete, class: 'btn btn-link' %>
                </div>
              </td>
            </tr>
          <% end %>
          <% if @measures.length == 0 %>
            <tr>
              <td colspan=42 class='text-center'>No hay unidades de medida</td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
