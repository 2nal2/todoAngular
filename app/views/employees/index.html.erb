<% @title = "Lista de empleados" %>

<% content_for :description do %>
  <p></p>
<% end %>

<% content_for :actions do %>
  <%= link_to new_employee_path, class: 'btn btn-primary btn-large pull-right' do %>
    <%= fa_icon_tag "plus" %> Agregar empleado
  <% end %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-9">
      <div class="card card-sheet sheet-condensed">
        <table class="table table-striped table-hover table-sm-responsive">
          <thead>
          <tr>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Telefonos</th>
            <th>Dni</th>
<!--            <th>Direction</th>-->
<!--            <th>Hire date</th>-->
<!--            <th>Dismissal date</th>-->
            <th>Role</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @employees.each do |employee| %>
            <tr>
              <td><%= employee.first_name %></td>
              <td><%= employee.last_name %></td>
              <td><%= employee.phone %></td>
              <td><%= employee.dni %></td>
<!--              <td><%#= employee.direction %></td>-->
<!--              <td><%#= employee.hire_date %></td>-->
<!--              <td><%#= employee.dismissal_date %></td>-->
              <td><%= employee.role %></td>
              <td class="actions text-right">
                <div class="btn-group">
                  <%= link_to theme_icon_tag("eye"), employee, 'data-toggle': 'tooltip', title: 'Ver', class: "btn btn-link" %>
                  <%= link_to theme_icon_tag("pencil-alt"), edit_employee_path(employee), 'data-toggle': 'tooltip', title: 'Editar', class: "btn btn-link" %>
                  <%#= link_to theme_icon_tag("trash"), employee, 'data-toggle': 'tooltip', title: 'Delete', data: {confirm: 'Are you sure?'}, method: :delete, class: 'btn btn-link' %>
                </div>
              </td>
            </tr>
          <% end %>
          <% if @employees.length == 0 %>
            <tr>
              <td colspan=42 class='text-center'>No employees.</td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>

      <%# Remove the trailing if condition if you're using pagination. %>
      <%= will_paginate @employees if @employees.respond_to?(:total_pages) %>

    </div>


    <div id="sidebar" class="col-md-3">

      <ul class="nav nav-stacked nav-caret-left bg-gray-200 card small pb-2">
        <li><h6 class="mt-3 ml-3">Sub Menu</h6></li>
        <li class="nav-item">
          <a class="nav-link" href="#">Vacation Days</a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="#">Salaries</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Disciplinary Items</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Firings</a>
        </li>
      </ul>
    </div> <!-- /#sidebar -->
  </div>
</div>
