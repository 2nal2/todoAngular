<% @title = "Showing employee" %>

<% content_for :description do %>
  <p>Edit this template in <code>app/views/Employees/show.html.erb</code>.</p>
  <% end %>

<div class="container">
  <div class="row">
    <div class="col-12 col-md-9">
      <div class="card">
        <div class="card-body">
          <div class="form-horizontal">
                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">First name</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @employee.first_name %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Last name</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @employee.last_name %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Phone</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @employee.phone %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Dni</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @employee.dni %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Direction</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @employee.direction %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Hire date</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @employee.hire_date %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Dismissal date</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @employee.dismissal_date %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Role</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @employee.role %>
                  </span>
                </div>
              </div>

                        <div class="d-flex">
              <div class="ml-auto">
                <%= link_to fa_icon_tag("pencil") + ' Edit', edit_employee_path(@employee), class: 'btn btn-primary' %>
                <%= link_to 'Back', employees_path, class: 'btn' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div id="sidebar" class="col-md-3">
      <ul class="nav nav-stacked nav-caret-left bg-gray-200 card small pb-2">
        <li><h6 class="mt-3 ml-3">Sub Menu</h6></li>
        <li class="nav-item">
        <a class="nav-link" href="#">Vacation Days</a>
        </li>
        <li class="nav-item active">
        <a class="nav-link" href="#">Salaries</a>
        </li>
        <li class="nav-item">
        <a class="nav-link" href="#">Disciplinary Items</a>
        </li>
        <li class="nav-item">
        <a class="nav-link" href="#">Firings</a>
        </li>
      </ul>
    </div>
  </div>
</div>
