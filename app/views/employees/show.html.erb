<% @title = "Detalle de empleado" %>

<% content_for :description do %>
  <p></p>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="form-horizontal">
            <div class="form-group row">
              <label class="col-12 col-md-2 form-label">Nombres</label>
              <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @employee.first_name %>
                  </span>
              </div>
            </div>

            <div class="form-group row">
              <label class="col-12 col-md-2 form-label">Apellidos</label>
              <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @employee.last_name %>
                  </span>
              </div>
            </div>

            <div class="form-group row">
              <label class="col-12 col-md-2 form-label">Teléfono</label>
              <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @employee.phone %>
                  </span>
              </div>
            </div>

            <div class="form-group row">
              <label class="col-12 col-md-2 form-label">Cédula</label>
              <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @employee.dni %>
                  </span>
              </div>
            </div>

            <div class="form-group row">
              <label class="col-12 col-md-2 form-label">Direccion</label>
              <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @employee.direction %>
                  </span>
              </div>
            </div>

            <div class="form-group row">
              <label class="col-12 col-md-2 form-label">Estado</label>
              <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @employee.status %>
                  </span>
              </div>
            </div>

            <div class="form-group row">
              <label class="col-12 col-md-2 form-label">Rol</label>
              <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @employee.role %>
                  </span>
              </div>
            </div>

            <div class="d-flex">
              <div class="ml-auto">
                <%= link_to fa_icon_tag("pencil") + ' Editar', edit_employee_path(@employee), class: 'btn btn-primary' %>
                <%= link_to 'Atras', employees_path, class: 'btn' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
