
<%= form_for(@employee, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :first_name, class: 'row' do |f| %>
      <%= f.label :first_name, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :first_name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :last_name, class: 'row' do |f| %>
      <%= f.label :last_name, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :last_name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :phone, class: 'row' do |f| %>
      <%= f.label :phone, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :phone, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :dni, class: 'row' do |f| %>
      <%= f.label :dni, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :dni, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :direction, class: 'row' do |f| %>
      <%= f.label :direction, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_area :direction, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :hire_date, class: 'row' do |f| %>
      <%= f.label :hire_date, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.date_select :hire_date, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :dismissal_date, class: 'row' do |f| %>
      <%= f.label :dismissal_date, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.date_select :dismissal_date, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :role, class: 'row' do |f| %>
      <%= f.label :role, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :role, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="d-flex">
    <div class="ml-auto">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Cancel", employees_path, class: 'btn btn-outline-default' %>
    </div>
  </div>
<% end %>

