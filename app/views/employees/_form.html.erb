<%= form_for(@employee, html: {class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :first_name, class: 'row' do |f| %>
      <%= f.label :first_name, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :first_name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :last_name, class: 'row' do |f| %>
      <%= f.label :last_name, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :last_name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :phone, class: 'row' do |f| %>
      <%= f.label :phone, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :phone, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :dni, class: 'row' do |f| %>
      <%= f.label :dni, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :dni, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :direction, class: 'row' do |f| %>
      <%= f.label :direction, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_area :direction, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :status, class: 'row' do |f| %>
      <%= f.label :status, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.check_box :status, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :role, class: 'row' do |f| %>
      <%= f.label :role, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.select(:role, [["administrador", "admin"], ["cajero", "cajero"], ["Administrador de inventario", "admin_inventario"]],{:prompt => "Seleccione"}, {required: true, class:"form-control"}) %>
        <%= f.error_messages %>
      </div>
    <% end %>
  </div>

  <div class="d-flex">
    <div class="ml-auto">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Cancelar", employees_path, class: 'btn btn-outline-default' %>
    </div>
  </div>
<% end %>

