
<%= form_for(@product_price, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :product_id, class: 'row' do |f| %>
      <%= f.label :product_id, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.number_field :product_id, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :price_public, class: 'row' do |f| %>
      <%= f.label :price_public, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :price_public, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :price_farmacy, class: 'row' do |f| %>
      <%= f.label :price_farmacy, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :price_farmacy, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :price_distribution, class: 'row' do |f| %>
      <%= f.label :price_distribution, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :price_distribution, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :start_date, class: 'row' do |f| %>
      <%= f.label :start_date, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.date_select :start_date, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :end_date, class: 'row' do |f| %>
      <%= f.label :end_date, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.date_select :end_date, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :status, class: 'row' do |f| %>
      <%= f.label :status, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.check_box :status, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="d-flex">
    <div class="ml-auto">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Cancel", product_prices_path, class: 'btn btn-outline-default' %>
    </div>
  </div>
<% end %>

