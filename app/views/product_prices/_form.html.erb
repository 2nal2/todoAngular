<%= form_for([@product, @product_price], html: {class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="form-group row">
      <label class="control-label col-md-2">Producto</label>
      <div class="col-12 col-md-10">
        <div class="form-control uneditable-input">
          <span>
            <%= @product.name %>
          </span>
        </div>
      </div>
    </div>
    <%= f.form_group :price_public, class: 'row' do |f| %>
      <%= f.label "Precio al pÃºblico", class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :price_public, class: 'form-control', required: true %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :price_farmacy, class: 'row' do |f| %>
      <%= f.label "Precio a farmacias", class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :price_farmacy, class: 'form-control', required:true %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :price_distribution, class: 'row' do |f| %>
      <%= f.label "Precio a distribuidor", class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :price_distribution, class: 'form-control', required: true %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :start_date, class: 'row' do |f| %>
      <%= f.label "Fecha de inicio", class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.date_select :start_date, class: 'form-control', required:true %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :end_date, class: 'row' do |f| %>
      <%= f.label "Fecha final", class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.date_select :end_date, class: 'form-control', required:true %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :status, class: 'row' do |f| %>
      <%= f.label "Estado", class: 'control-label col-md-2' %>
      <div class='col-sm-12 col-md-2'>
        <%= f.check_box :status, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="d-flex">
    <div class="ml-auto">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Cancelar", product_product_prices_path, class: 'btn btn-outline-default' %>
    </div>
  </div>
<% end %>

