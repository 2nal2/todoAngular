<% @title = "Showing product_price" %>

<% content_for :description do %>
  <p>Edit this template in <code>app/views/ProductPrices/show.html.erb</code>.</p>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-12 col-md-9">
      <div class="card">
        <div class="card-body">
          <div class="form-horizontal">
            <div class="form-group row">
              <label class="col-12 col-md-2 form-label">Product</label>
              <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @product_price.product_id %>
                  </span>
              </div>
            </div>

            <div class="form-group row">
              <label class="col-12 col-md-2 form-label">Price public</label>
              <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @product_price.price_public %>
                  </span>
              </div>
            </div>

            <div class="form-group row">
              <label class="col-12 col-md-2 form-label">Price farmacy</label>
              <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @product_price.price_farmacy %>
                  </span>
              </div>
            </div>

            <div class="form-group row">
              <label class="col-12 col-md-2 form-label">Price distribution</label>
              <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @product_price.price_distribution %>
                  </span>
              </div>
            </div>

            <div class="form-group row">
              <label class="col-12 col-md-2 form-label">Start date</label>
              <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @product_price.start_date %>
                  </span>
              </div>
            </div>

            <div class="form-group row">
              <label class="col-12 col-md-2 form-label">End date</label>
              <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @product_price.end_date %>
                  </span>
              </div>
            </div>

            <div class="form-group row">
              <label class="col-12 col-md-2 form-label">Status</label>
              <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @product_price.status %>
                  </span>
              </div>
            </div>

            <div class="d-flex">
              <div class="ml-auto">
                <%= link_to fa_icon_tag("pencil") + ' Edit', edit_product_product_price_path(@product_price), class: 'btn btn-primary' %>
                <%= link_to 'Back', product_product_prices_path, class: 'btn' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div id="sidebar" class="col-md-3">
      <ul class="nav nav-stacked nav-caret-left bg-gray-200 card small pb-2">
        <li><h6 class="mt-3 ml-3">Sub Menu</h6></li>
        <li class="nav-item">
          <a class="nav-link" href="#">Vacation Days</a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="#">Salaries</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Disciplinary Items</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Firings</a>
        </li>
      </ul>
    </div>
  </div>
</div>
