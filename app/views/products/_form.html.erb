<%= form_for(@product, html: {class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :product_category_id, class: 'row' do |f| %>
      <%= f.label :product_category_id, class: 'control-label col-md-2' %>
      <div class="col-12 col-md-10">
        <%= f.collection_select(:product_category_id, @categories , :id, :name, class: "form-control col-md-12", selected: 0) %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :bar_code, class: 'row' do |f| %>
      <%= f.label :bar_code, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :bar_code, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :name, class: 'row' do |f| %>
      <%= f.label :name, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :has_iva, class: 'row' do |f| %>
      <%= f.label :has_iva, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.check_box :has_iva, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :description, class: 'row' do |f| %>
      <%= f.label :description, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_area :description, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :need_prescription, class: 'row' do |f| %>
      <%= f.label :need_prescription, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.check_box :need_prescription, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :min_stock, class: 'row' do |f| %>
      <%= f.label :min_stock, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.number_field :min_stock, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :stock, class: 'row' do |f| %>
      <%= f.label :stock, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.number_field :stock, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :cost, class: 'row' do |f| %>
      <%= f.label :cost, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :cost, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="d-flex">
    <div class="ml-auto">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Cancel", products_path, class: 'btn btn-outline-default' %>
    </div>
  </div>
<% end %>

