<% @title = "Lista de empleados" %>
<% content_for :description do %>
  <p></p>
<% end %>
<%
=begin%>
 <% content_for :actions do %>
  <div class="pull-right">
    <%= link_to users_path(format: :xlsx), class: 'btn btn-primary btn-large' do %>
      <%= fa_icon_tag "file-excel-o " %> Exportar
    <% end %>
    <%= link_to new_user_path, class: 'btn btn-primary btn-large' do %>
      <%= fa_icon_tag "plus" %> Agregar empleado
    <% end %>
  </div>
<% end %> 
<%
=end%>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= form_tag(users_path, :method => "get", id: "search-form", class: "horizontal-form") do %>
        <div class="form-inputs row">
          <div class="col-9 col-sm-10">
            <%= text_field_tag :search, params[:search], placeholder: "Buscar usuarios", class: "form-control" %>
          </div>
          <div class="">
            <%= submit_tag "Buscar", class: "btn btn-primary btn-large center" %>
          </div>
        </div>
      <% end %>
      <br>
      <div class="card">
        <table class="table table-striped table-hover table-sm-responsive">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Email</th>
              <th>Rol</th>
              <th>Estado</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.role %></td>
                <td>
                  <%
=begin%>
 <span class="badge badge-<%= user.locked ? "success" : "danger" %>">
                    <%= user.locked ? "Activo" : "Inactivo" %>
                  </span> 
<%
=end%>
                </td>
                <td class="actions text-right">
                  <div class="btn-group">
                    <%= link_to theme_icon_tag("eye"), user, 'data-toggle': 'tooltip', title: 'Ver', class: "btn btn-link" %>
                    <%= link_to theme_icon_tag("pencil-alt"), edit_user_path(user), 'data-toggle': 'tooltip', title: 'Editar', class: "btn btn-link" %>
                  </div>
                </td>
              </tr>
            <% end %>
            <% if @users.length == 0 %>
              <tr>
                <td colspan=42 class='text-center'>No se encontraron usuarios.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%= will_paginate @users if @users.respond_to?(:total_pages) %>
    </div>
  </div>
</div>
